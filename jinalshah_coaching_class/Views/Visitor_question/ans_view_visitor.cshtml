@model jinalshah_coaching_class.Models.answer_model_visitor
@{
    ViewBag.Title = "ans_view_visitor";
    Layout = "~/Views/Shared/_master1_visitor.cshtml";
}



@section Scripts{

  @* <link href="~/css/endless.min.css" rel="stylesheet">*@
	<link href="~/css/endless-skin.css" rel="stylesheet">
	<!-- Color box -->
	<link href="~/css/colorbox/colorbox.css" rel="stylesheet">

	<!-- Endless -->
	
    <!-- Colorbox -->
	<script src='~/js/jquery.colorbox.min.js'></script>	
	
    <!-- Endless -->
	<script src="~/js/endless/endless.js"></script>
	<script>
	    $(function () {
	        //Colorbox 
	        $('.image-zoom').colorbox({
	            maxWidth: '90%',
	            width: '800px'
	        });
	    });
	</script>	
    <style type="text/css">
        @@media only screen and (min-width:320px) and (max-width:480px) {
            #res{
                width:300px;
                padding-left:22px;
            }
    }
    </style>
     <script>
         $(document).ready(function () {

             $("#submit").click(function () {

                 alert("Plaese Login to add comment");
             });


         });
    </script>
   
}

<div id="wrapper" class="preload">
		<div id="main-container">
			<div class="padding-md">
				<div class="row">
					<div class="col-md-11">	
						
						<div class="row">	
							<div id="res">
								<div class="panel blog-container">
									@*<div class="panel-body">*@
										
                                        <h3 class="headline m-top-md">
							                Question Answers
							                <span class="line"></span>
					                	</h3>   
                           
										<small class="text-muted">By <a href="#"><strong>@ViewBag.fname</strong></a> | @Model.que_date | @ViewBag.count  Answer</small>
                                    <br /><br />
										<div class="image-wrapper">
											<a class="image-wrapper image-zoom"  href="@Url.Content(Model.que_img)">
												<img src="@Url.Content(Model.que_img)" class="img-responsive" alt="Photo of Blog">
												<div class="image-overlay"></div>	
											</a>
										</div><!-- /image-wrapper -->
                                        <br />
                                        <br />
                                             <div class="form-group">
                                                 <label for="name">Question:</label>&nbsp;&nbsp;&nbsp;
                                                      @Model.que_title
                                             </div><!--//form-group-->
                                            
								
                                        <div class="form-group">
                                                 <label for="name">Description:</label>&nbsp;&nbsp;&nbsp;
                                               @Html.Raw(Model.que_desc)
                                             </div><!--//form-group-->
									@*</div>*@
								</div><!-- /panel -->
								
                               @{
                                   List<jinalshah_coaching_class.Models.answer_model_visitor> str = new List<jinalshah_coaching_class.Models.answer_model_visitor>();
                                   str = ViewBag.answer;
                               }
                               
                                
								<h4 class="headline">
									Answer (@str.Count)
									<span class="line"></span>
								</h4>

                               
                                 @foreach(var item in str)
                                {
								<ul class="media-list comment-list">
									<li class="media">
										<a class="pull-left" href="#">
											<img class="media-object img-circle" src="@Url.Content(ViewBag.photo)" alt="User Avatar" style="width: 40px; height: 40px;">
										</a>
										<div class="media-body">
											<div class="media-heading">
												<a href="#">@ViewBag.fname</a>
												<small class="text-muted">
													@item.a_date 
												</small>
											</div>
											<p>@Html.Raw(item.answer)</p>
											
											<!-- Nested media object -->
											
										</div>
									</li>
                                </ul><!-- /media-list -->	
                                }			
                              
                                <div class="form-group">
                                    <label for="name">Post your Answer Here</label>
                                     <br /><br />
                                    <form id="formToggleLine" class="form-horizontal no-margin form-border">
                                  <div class="form-group">
                                	<div class="col-lg-10">
									<textarea id="wysihtml5-textarea" name="answer"  placeholder="Enter your text ..." class="form-control" rows="6"></textarea>					
								</div><!-- /.col -->
                                     </div>
                                </form> 
                                </div><!--//form-group-->
                                
                                <div class="form-group">
                                    <label for="name">Image</label>
                                   <input  type="file" name="fileuploadDemo"  id="fileupld" class="form-control input-sm" />
                                </div><!--//form-group-->
     
                               
                                 <div class="form-group-center">
                                         <input type="button" value="Post Answer" class="btn btn-theme" id="submit1"  name="submit" />
                                </div>
                              
							</div><!-- /.col -->
							
						</div><!-- /.row -->
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.padding-md -->
		</div><!-- /main-container -->
	</div>
 <script type="text/javascript">
     $(document).ready(function () {

         $("#submit1").click(function () {

             alert("Plaese Login to add answer");
         });


     });
    </script>
  