@model jinalshah_coaching_class.Models.Blog_visitor
@{
    ViewBag.Title = "View1_blog_visitor";
    Layout = "~/Views/Shared/_master1_visitor.cshtml";
}


@section Scripts{

  @* <link href="~/css/endless.min.css" rel="stylesheet">*@
	<link href="~/css/endless-skin.css" rel="stylesheet">
	<!-- Color box -->
	<link href="~/css/colorbox/colorbox.css" rel="stylesheet">

	<!-- Endless -->
	
    <!-- Colorbox -->
	<script src='~/js/jquery.colorbox.min.js'></script>	
	
    <!-- Endless -->
	<script src="~/js/endless/endless.js"></script>
	<script>
	    $(function () {

	        //Colorbox 
	        $('.image-zoom').colorbox({
	            maxWidth: '90%',
	            width: '800px'
	        });

	    });
	</script>	
    
}

<div id="wrapper" class="preload">
		<div id="main-container">
			<div class="padding-md">
				<div class="row">
					<div class="col-md-11">	
						<h3 class="headline m-top-md">
							<i>	Welcome To Our Blog </i>
							<span class="line"></span>
						</h3>
						<div class="row">	
							<div>
								<div class="panel blog-container">
									<div class="panel-body">
										
                                        
                           
										<small class="text-muted">By <a href="#"><strong>@ViewBag.fname</strong></a> | @Model.blog_date_  | @ViewBag.cmt comments</small>
										<div class="seperator"></div>
										<div class="seperator"></div>
										<br />
										<div class="image-wrapper">
                                            @if(Model.blog_image!=null)
                                            {
											<a class="image-wrapper image-zoom"  href="@Url.Content(Model.blog_image)">
												<img src="@Url.Content(Model.blog_image)" class="img-responsive" alt="Photo of Blog">
												<div class="image-overlay"></div>	
											</a>
                                            }
										</div><!-- /image-wrapper -->

										@*<p class="m-top-sm m-bottom-sm">
											Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eros nibh, viverra a dui a, gravida varius velit. Nunc vel tempor nisi. Aenean id pellentesque mi, non placerat mi. Integer luctus accumsan tellus. Vivamus quis elit sit amet nibh lacinia suscipit eu quis purus. Vivamus tristique est non ipsum dapibus lacinia sed nec metus.
										</p>*@
										<blockquote>
											<p>@Model.subject</p>
											
										</blockquote>
										<p class="m-top-sm m-bottom-sm">
											@Html.Raw(Model.blog_desc)
										</p>
										
										@*<div class="m-top-sm">
											<a href="#" class="btn btn-sm btn-success">Previous</a>
											<a href="#" class="btn btn-sm btn-success pull-right">Next Post</a>
										</div>*@
									</div>
								</div><!-- /panel -->
						
							
                               @{
                                   List<jinalshah_coaching_class.Models.comment_model_visitor> str = new List<jinalshah_coaching_class.Models.comment_model_visitor>();
                                   str = ViewBag.comment;
                               }
                               
								<h4 class="headline">
									Comments (@str.Count)
									<span class="line"></span>
								</h4>
                                @foreach(var item in str)
                                {
								<ul class="media-list comment-list">
									<li class="media">
										<a class="pull-left" href="#">
											<img class="media-object img-circle" src="@Url.Content(@item.photo)" alt="User Avatar" style="width: 40px; height: 40px;">
										</a>
										<div class="media-body">
											<div class="media-heading">
												<a href="#">@item.fname</a>
												<small class="text-muted">
													@item.cmt_date 
												</small>
											</div>
											<p>@Html.Raw(item.comment)</p>
											
											<!-- Nested media object -->
											
										</div>
									</li>
                                </ul><!-- /media-list -->	
                                }
                                
                               
								<h4 class="headline">
									Add Comment
									<span class="line"></span>
								</h4>
								
									<form id="formToggleLine" class="form-horizontal no-margin form-border">
                                  <div class="form-group">
                                	<div class="col-lg-10">
									<textarea id="wysihtml5-textarea" name="comment"  placeholder="Enter your text ..." class="form-control" rows="6"></textarea>					
								  </div><!-- /.col -->
                                </div>
                                
									
									<div class="seperator"></div>
									<div>
                                        
										<button id="submit1" class="btn btn-theme" type="button">Post Comment</button>
									</div>
								</form>
                                		
                         
							</div><!-- /.col -->
							
						</div><!-- /.row -->
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.padding-md -->
		</div><!-- /main-container -->
	</div>
 <script type="text/javascript">
     $(document).ready(function () {

         $("#submit1").click(function () {

             alert("Plaese Login to add comment");
         });


     });
    </script>
    