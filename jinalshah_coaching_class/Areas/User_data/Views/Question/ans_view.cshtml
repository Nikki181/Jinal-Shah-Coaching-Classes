<div id="wrapper" class="preload">
		<div id="main-container">
			<div class="padding-md">
				<div class="row">
					<div class="col-md-11">	
						
						<div class="row">	
							<div>
								<div class="panel blog-container">
									@*<div class="panel-body">*@
										
                                        <h3 class="headline m-top-md">
							                Question Answers
							                <span class="line"></span>
					                	</h3>   
                                        @{
                                            int c = ViewBag.count;
                                            string s=ViewBag.fname;
                                        }

										<small class="text-muted">By <a href="#"><strong>@s</strong></a> | @Model.que_date |  @c Answer</small>
                                    <br /><br />
                                    @if(Model.que_img!=null)
                                    {
                                       <div class="image-wrapper">
											<a class="image-wrapper image-zoom"  href="@Url.Content(Model.que_img)">
												<img src="@Url.Content(Model.que_img)" class="img-responsive" alt="Photo of Blog">
												<div class="image-overlay"></div>	
											</a>
										</div><!-- /image-wrapper -->
                                    }
                                        <br />
                                        <br />
                                             <div class="form-group">
                                                 <label for="name">Question:</label>&nbsp;&nbsp;&nbsp;
                                                      @Model.que_title
                                             </div><!--//form-group-->
                                            
								
                                        <div class="form-group">
                                                 <label for="name">Description:</label>&nbsp;&nbsp;&nbsp;
                                               @Html.Raw(Model.que_desc)
                                             </div><!--//form-group-->
									@*</div>*@
								</div><!-- /panel -->
								
                               @{
                                   List<jinalshah_coaching_class.Areas.User_data.Models.answer_model> str = new List<jinalshah_coaching_class.Areas.User_data.Models.answer_model>();
                                   str = ViewBag.answer;
                               }
                               
                                
								<h4 class="headline">
									Answer (@str.Count)
									<span class="line"></span>
								</h4>

                               
                                 @foreach(var item in str)
                                {
								<ul class="media-list comment-list">
									<li class="media">
										<a class="pull-left" href="#">
											<img class="media-object img-circle" src="@Url.Content(ViewBag.photo)" alt="User Avatar" style="width: 40px; height: 40px;">
										</a>
										<div class="media-body">
											<div class="media-heading">
												<a href="#">@ViewBag.fname</a>
												<small class="text-muted">
													@item.a_date 
												</small>
											</div>
											<p>@Html.Raw(item.answer)</p>
											  @{
                                            var id =Convert.ToString(Session["email-id"]);
                                            }
                                            @if(item.fk_emai_id==id)
                                            {
                                                    @Html.ActionLink("Delete", "Delete_ans", new {id=item.pk_ans_id})
                                            }    
                                          
                                            
											<!-- Nested media object -->
											
										</div>
									</li>
                                </ul><!-- /media-list -->	
                                }			
                              

                                @using (Html.BeginForm("add_answer", "Question", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                 @Html.ValidationSummary(true)
    
                                 <div class="form-group">
                                    <label for="name">Post your Answer Here</label>
                                   </div><!--//form-group-->
                                    
                                  <form id="formToggleLine" class="form-horizontal no-margin form-border">
                                  <div class="form-group">
                                	<div class="col-lg-10">
                                        <textarea id="wysihtml5-textarea" name="answer"  placeholder="Enter your text ..." class="form-control" rows="6"></textarea>
                                     </div><!-- /.col -->
                                     </div>
                                        <span id="spn" style="color:red">@ViewBag.msg</span>
                               
                               <br /> <br /> <br /> <br /> <br /> <br /> <br /> <br/><br />
                                <div class="form-group">
                                 <label for="name">Image</label>
                                   <input  type="file" name="fileuploadDemo"  id="fileupld" class="form-control" />
                                </div><!--//form-group-->
     
                               
                                 <div class="form-group">
                                         <input type="submit" value="Post" class="btn btn-theme"  name="submit" />
                                        @* <input type="submit" value="Post Question" class="btn btn-theme"  name="submit" />*@
                                </div>
                               </form> 
                                }
							</div><!-- /.col -->
							
