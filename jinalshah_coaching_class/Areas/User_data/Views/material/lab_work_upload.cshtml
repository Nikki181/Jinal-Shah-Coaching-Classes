@using (Html.BeginForm("insert_material", "material", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    

                                
                                <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title"><i>Upload Your Work</i></h4>
                                        </div>
                                        <div class="panel-body">
                     <div class="form-group">
                                    <label for="name">Tag Subject</label>
                                    <input type="text" id="txtsub1" name="txtsub1"  class="tag-demo1" value="C,C++">
                                </div><!--//form-group-->          
						
                                <span  style="color:red">@ViewBag.msg</span>

                                 <div class="form-group">
                                    <label for="name">Upload Here</label>
                                   <input  type="file" name="fileuploadDemo" required id="fileupld" class="form-control input-sm" />
                                </div><!--//form-group-->

                                <span id="spn" style="color:red"></span>

                                <hr />
                                 <div class="controls text-left">
                                       <h3><i class="fa fa-upload " style="color:#6091ba">
                                         <input type="submit" value="Upload" id="sub" class="btn btn-theme"  name="submit" />
                                        </i></h3>
                                </div>
    </div>
                                    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#sub").click(function () {
           
            if ($("#fileupld").val() == "") {
                $("#spn").html("Please Upload Your Work");
            }

            return false;
        });
     
});
</script>