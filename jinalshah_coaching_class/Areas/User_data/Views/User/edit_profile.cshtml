							        <label>First name :</label>&nbsp;
							        <input type="text" required placeholder="First Name" name="fname"  class="form-control input-sm" value="Amita">
                                    
                                    </div>
                                    <div>
                                        <label>Last  name :</label>&nbsp;
							        <input type="text" required placeholder="Last Name" name="lname"  class="form-control input-sm" value="Trivedi">
                                    </div>
                                    

                       <br />
                        <div class="form-group">
							<label>Address  :</label>&nbsp;
                            <textarea  placeholder="Address" required name="address" class="form-control input-sm" rows="6">Paldi</textarea>
							
                        </div>
                                    
                        <div class="form-group">
							<label>Gender :</label>&nbsp;
                          
                           
                            <input type="text" placeholder="Gender" required name="gender" class="form-control input-sm" value="Female">
                        </div>
                        <div class="form-group" >
							<label>Email-id  :</label>&nbsp;
                             <label>amitatrivedi12@gmail.com</label>
							
						</div>

