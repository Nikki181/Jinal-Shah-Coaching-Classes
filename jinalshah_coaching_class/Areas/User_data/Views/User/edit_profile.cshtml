										<option>5th semester</option>
                                        <option>2</option>
										<option>3</option>
                                </select>
                            @*<input type="text" placeholder="Username" name="semester" class="form-control input-sm bounceIn animation-delay2" value="@Model.semester" style="margin-left:80px; margin-top:-30px; width:120%">*@
						</div>
                         
                       
                    <div class="controls text-right">
                                      <h3>
                                        <button type="submit" class="btn btn-theme">Save</button>
                                       </h3>
                        
                        </div>
					</form>
				</div>
			</div><!-- /panel -->
		</div><!-- /login-widget -->
	</div><!-- /login-wrapper -->

}
