@model jinalshah_coaching_class.Areas.Admin.Models.comment_admin
@{
    ViewBag.Title = "all_comment";
    Layout = "~/Areas/Admin/Views/Shared/_admin1_master.cshtml";
}

@section Scripts{

  @* <link href="~/css/endless.min.css" rel="stylesheet">*@
	<link href="~/css/endless-skin.css" rel="stylesheet">
	<!-- Color box -->
	<link href="~/css/colorbox/colorbox.css" rel="stylesheet">

	<!-- Endless -->
	
    <!-- Colorbox -->
	<script src='~/js/jquery.colorbox.min.js'></script>	
	
    <!-- Endless -->
	<script src="~/js/endless/endless.js"></script>
	<script>
	    $(function () {
	        //Colorbox 
	        $('.image-zoom').colorbox({
	            maxWidth: '90%',
	            width: '800px'
	        });
	    });
	</script>	
}

<div id="wrapper" class="preload">
		<div id="main-container">
			<div class="padding-md">
				<div class="row">
					<div class="col-md-11">	
						<h3 class="headline m-top-md">
							Welcome To Our Blog
							<span class="line"></span>
						</h3>
						<div class="row">	
							<div>
								<div class="panel blog-container">
									<div class="panel-body">
									
                                @{
                                   List<jinalshah_coaching_class.Areas.Admin.Models.comment_admin> str = new List<jinalshah_coaching_class.Areas.Admin.Models.comment_admin>();
                                   str = ViewBag.comment;
                               }
                           
										<small class="text-muted">By <a href="#"><strong>@ViewBag.fname</strong></a> | @Model.blog_date_  | @str.Count Comments</small>
										<div class="seperator"></div>
										<div class="seperator"></div>
										<br />
										<div class="image-wrapper">
											<a class="image-wrapper image-zoom"  href="@Url.Content(Model.blog_image)">
												<img src="@Url.Content(Model.blog_image)" class="img-responsive" alt="Photo of Blog">
												<div class="image-overlay"></div>	
											</a>
										</div><!-- /image-wrapper -->

										@*<p class="m-top-sm m-bottom-sm">
											Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eros nibh, viverra a dui a, gravida varius velit. Nunc vel tempor nisi. Aenean id pellentesque mi, non placerat mi. Integer luctus accumsan tellus. Vivamus quis elit sit amet nibh lacinia suscipit eu quis purus. Vivamus tristique est non ipsum dapibus lacinia sed nec metus.
										</p>*@
										<blockquote>
											<p>@Model.subject</p>
											<small>Someone famous in <cite title="Source Title">Source Title</cite></small>
										</blockquote>
										<p class="m-top-sm m-bottom-sm">
											@Model.blog_desc
										</p>
										
										@*<div class="m-top-sm">
											<a href="#" class="btn btn-sm btn-success">Previous</a>
											<a href="#" class="btn btn-sm btn-success pull-right">Next Post</a>
										</div>*@
									</div>
								</div><!-- /panel -->
								
							
                               
                               
								<h4 class="headline">
									Comments (@str.Count)
									<span class="line"></span>
								</h4>
                                @foreach(var item in str)
                                {
								<ul class="media-list comment-list">
									<li class="media">
										<a class="pull-left" href="#">
											<img class="media-object img-circle" src="@Url.Content(@item.photo)" alt="User Avatar" style="width: 40px; height: 40px;">
										</a>
										<div class="media-body">
											<div class="media-heading">
												<a href="#">@item.fname</a>
												<small class="text-muted">
													@item.cmt_date 
												</small>
											</div>
											<p>@item.comment</p>
											
											<!-- Nested media object -->
											
										</div>
									</li>
                                </ul><!-- /media-list -->	
                                }			
                                @using (Html.BeginForm("add_comment", "Admin_comment", FormMethod.Post))
                                 {
	
								<h4 class="headline">
									Add Comment
									<span class="line"></span>
								</h4>
								<form>
									<div class="row">
										<div class="col-md-6">
											@*<div class="form-group">
												<label>Name</label>												
												<input type="text" class="form-control input-sm" placeholder="Name" name="name">
											</div><!-- /form-group -->*@
										</div><!-- /.col -->
										
									</div><!-- /.row -->
									<textarea class="form-control" rows="10" name="comment"></textarea>
									<div class="seperator"></div>
									<div class="text-right m-bottom-md">
										<button class="btn btn-success" type="submit">Post Comment</button>
									</div>
								</form>
                                }
							</div><!-- /.col -->
							
						</div><!-- /.row -->
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.padding-md -->
		</div><!-- /main-container -->
	</div>